#ifndef LINKED_LIST_H
#define LINKED_LIST_H

typedef unsigned short bool;
#define false 0
#define true 1

struct node {
    char *val;
    bool tail;
    struct node *next;
};

typedef struct node node;

typedef struct {
    node *head;
} linked_list;

extern linked_list *ll_new();
extern void ll_append(linked_list *list, char *val);
extern void ll_append_after(int val, node *after);
extern void ll_append_before(int val, node *before);
extern node *ll_find(linked_list *list, char *val);
extern void ll_delete_node(linked_list *list, node *delete_me);
extern void ll_print_list(linked_list *list);
extern void ll_free_list(linked_list *list);
extern long ll_list_length(linked_list *list);

#endif
